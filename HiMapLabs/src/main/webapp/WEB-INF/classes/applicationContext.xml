<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans 
                http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
                http://www.springframework.org/schema/context 
                http://www.springframework.org/schema/context/spring-context-3.2.xsd 
                http://www.springframework.org/schema/mvc 
                http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <!-- 使用 annotation -->
	<context:annotation-config />
	<!-- 使用 annotation 自动注册bean,并检查@Controller, @Service, @Repository注解已被注入 -->
	<context:component-scan base-package="com.hisense.*" />

    <!-- 引入Config.properties配置文件 -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
          id="propertyConfigurer">
        <property name="locations">
            <list>
                <value>/WEB-INF/classes/Config.properties</value>
            </list>
        </property>
    </bean>



    <!-- 数据源  -->
    <bean id="HiMapOraBean"
          class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName"
                  value="oracle.jdbc.driver.OracleDriver">
        </property>
        <property name="url" value="${HIATMP_URL}"></property>
        <property name="username" value="${HIATMP_USER}"></property>
        <property name="password" value="${HIATMP_PWD}"></property>
        <property name="maxActive" value="20"></property>
        <property name="minIdle" value="1"></property>
        <property name="maxIdle" value="20"></property>
        <property name="initialSize" value="5"></property>
        <property name="maxWait" value="30000"></property>
    </bean>

    <!-- JDBC模板 -->
    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="HiMapOraBean" />
    </bean>

    <!-- blob、clob设置 -->
    <bean id="defaultLobHandler"
          class="org.springframework.jdbc.support.lob.DefaultLobHandler"
          lazy-init="true" />

    <bean id="BaseDao"
          class="com.hisense.himap.dao.BaseDaoImpl">
    </bean>

</beans>